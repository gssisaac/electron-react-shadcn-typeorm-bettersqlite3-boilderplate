{
  "name": "electron-react-shadcn-typeorm-bettersqlite3-boilerplate",
  "version": "1.0.0",
  "description": "Electron app with TypeORM and React",
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "concurrently \"yarn dev:main\" \"yarn dev:renderer\"",
    "dev:main": "tsc -w --project tsconfig.main.json",
    "dev:renderer": "vite",
    "build": "yarn build:main && yarn build:renderer",
    "build:main": "tsc --project tsconfig.main.json",
    "build:renderer": "vite build",
    "start": "electron .",
    "electron:dev": "concurrently \"yarn dev:main\" \"yarn dev:renderer\" \"yarn electron:start\"",
    "electron:start": "sh -c 'wait-on file:dist/main/index.js http://localhost:5173 && NODE_ENV=development electron .'",
    "electron:build": "yarn build && electron-builder --mac",
    "electron:build:all": "yarn build && electron-builder"
  },
  "keywords": [],
  "author": "Isaac Lee <gssisaac@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "postcss": "^8.4.32",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.4.0",
    "tailwindcss-animate": "^1.0.7",
    "typescript": "^5.3.3",
    "vite": "^5.0.8",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-slot": "^1.0.2",
    "better-sqlite3": "^9.2.2",
    "class-validator": "^0.14.0",
    "clsx": "^2.0.0",
    "lucide-react": "^0.303.0",
    "reflect-metadata": "^0.1.14",
    "tailwind-merge": "^2.2.0",
    "typeorm": "^0.3.17"
  },
  "build": {
    "appId": "com.dbtool.macapp",
    "productName": "DB Tool Mac App",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dir",
          "arch": ["arm64"]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
